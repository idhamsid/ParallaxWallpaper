<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/imgMoreExit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#70000000">

                    <TextView
                        android:id="@+id/txtTitleMore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/actionbar_text" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_orange_light"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Ads"
                    android:textColor="#ffffff" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tbExitExit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/actionbar_text"
                    android:text="Share App"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:backgroundTint="@color/actionbar_text" />

                <Button
                    android:id="@+id/tbRateExit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/actionbar_text"
                    android:text="Rate Us"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:backgroundTint="@color/actionbar_text" />

                <Button
                    android:id="@+id/tbDownloadExit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/accentColor"
                    android:text="Download"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:backgroundTint="@color/accentColor" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/imgCloseOpen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="#50000000"
            app:srcCompat="@drawable/baseline_close_24" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>